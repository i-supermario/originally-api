generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String      @default(uuid()) @id
  email     String      @unique
  firstName String 
  lastName  String
  dob       DateTime
  phoneNo   String
  sessions  Session[]
}

enum SessionStatus {
  ACTIVE
  INACTIVE
}
model Session {
  id        String         @id @default(uuid())     
  userId    String
  user      User           @relation(fields: [userId], references: [id])
  status    SessionStatus
  createdAt DateTime       @default(now())
  expiresAt DateTime
}


